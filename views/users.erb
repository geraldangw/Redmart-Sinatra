<h2>
    Users
</h2>

<a href="./"> HOME </a>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Password</th>
            <th>CC Number</th>
            <th>Date Joined</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <%= user[:id] %>
            </td>
            <td>
                <%= user[:name] %>
            </td>
            <td>
                <%= user[:email] %>
            </td>
            <td>
                <%= user[:address] %>
            </td>
            <td>
                <%= user[:password] %>
            </td>
            <td>
                <%= user[:cc_number] %>
            </td>
            <td>
                <%= user[:date_joined] %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
